<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mfs.sms.mapper.UserMapper">
    <sql id="userColumn">
        id,username,password,head,name,role,create_time,deleted
    </sql>
    <resultMap id="user" type="User">
        <id property="id" column="id"></id>
        <result property="username" column="username"></result>
        <result property="head" column="head"></result>
        <result property="name" column="name"></result>
        <result property="createTime" column="create_time"></result>
        <result property="roleId" column="role"></result>
        <result property="deleted" column="deleted"></result>
        <!-- 嵌套查询 -->
       <association property="role" column="role" javaType="Role" select="com.mfs.sms.mapper.RoleMapper.queryById">
        </association>
    </resultMap>
    <insert id="add" parameterType="User">
        insert into tb_user(
        <include refid="userColumn"></include>
        ) values(null,#{username},#{password},#{head},#{name},#{roleId},#{createTime},#{deleted})
    </insert>
    <delete id="delete" parameterType="User">
        delete from tb_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="roleId != null">
                and role = #{roleId }
            </if>
        </where>
    </delete>
    <update id="update" parameterType="User">
        update tb_user
        <set>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="head != null and head != ''">
                head = #{head},
            </if>
            <if test="roleId != null">
                role = #{roleId },
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
        </set>
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
        </where>
    </update>
    <select id="queryByUsername" parameterType="String" resultMap="user">
        select <include refid="userColumn"></include>
        from tb_user
        where deleted = false and username = #{username}
    </select>
    <select id="query" parameterType="User" resultMap="user">
        select <include refid="userColumn"></include>
        from tb_user
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="name != null and name != ''">
                and name like concat("%",#{name},"%")
            </if>
            <if test="roleId != null">
                and role = #{roleId}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
        </where>
        <if test="order != null and order != ''">
            order by ${order}
        </if>
        <if test="page != null and offset != null">
            limit #{page},#{offset}
        </if>
    </select>
</mapper>